<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
       
<tiles-definitions>
 <!-- admin layout -->
 	<definition name="alayout-tiles" template="/WEB-INF/views/layouts/adminlayout.jsp">
	    <put-attribute name="atitle" value="admintitle-----" />
	    <put-attribute name="aheader" value="/WEB-INF/views/layouts/adminheader.jsp"/>
	    <put-attribute name="asidebar" value="/WEB-INF/views/layouts/adminsidebar.jsp" />
	    <put-attribute name="abody" value="" />
	    <put-attribute name="afooter" value="/WEB-INF/views/layouts/adminfooter.jsp"/>
  	</definition>
  	
   <definition name="admin/*" extends="alayout-tiles">
   		<put-attribute name="abody" value="/WEB-INF/views/admin/{1}.jsp"/>
   </definition>
 
 <!-- user layout -->
    <definition name="shop.Project" template="/WEB-INF/views/layouts/layout.jsp">
	    <put-attribute name="title" value="My shop." />
	    <put-attribute name="header" value="/WEB-INF/views/layouts/header.jsp" />
	    <put-attribute name="left" value="/WEB-INF/views/layouts/sidebar.jsp" />
	    <put-attribute name="body" value="" />
	    <put-attribute name="footer" value="/WEB-INF/views/layouts/footer.jsp" />
  	</definition>
  
   <definition name="*/*" extends="shop.Project">
   		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
   </definition>
   
</tiles-definitions>